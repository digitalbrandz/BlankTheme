{% schema %}
  {
    "name": "Loox Reviews",
   "class": "index-section",
    "settings": [   

      {
        "type": "select",
        "id": "average_rating",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "5",
            "label": "5"
          }
        ],
        "label": "Average Rating"
      },
{
    "type":   "range",
    "id":     "review_count",
    "min":       0,
    "max":       500,
    "step":     20,
    "label":     "Add Additional Review Count",
    "default":   0
}],
  "blocks": [
    {
     "type": "Review",
     "name": "Review",
     "settings" : [
      {
       "id": "review_product",
       "type": "product",
       "label": "Product"
      },
      {
       "id": "review_pic",
       "type": "image_picker",
       "label": "Image"
      },
      {
        "id": "review_name",
        "type": "text",
        "label": "Name"
      },
      {
        "id": "review_caption",
        "type": "textarea",
        "label": "Caption"
      },
      {
        "id": "review_date",
        "type": "text",
        "label": "ex: 11\/12\/2021"
      },
      {
        "type": "select",
        "id": "review_rating",
        "options": [
          {
            "value": "none",
            "label": "None"
          },
          {
            "value": "1",
            "label": "1"
          },
          {
            "value": "2",
            "label": "2"
          },
          {
            "value": "3",
            "label": "3"
          },
          {
            "value": "4",
            "label": "4"
          },
          {
            "value": "5",
            "label": "5"
          }
        ],
        "label": "Rating"
      },
      {
        "type": "checkbox",
        "id": "verified",
        "label": "Enable Verified Badge",
        "default": true
      }
     ]
  }
 ],
 "presets": [
    {
      "name": "Loox Reviews",
      "category": "Digital Brandz"
    }
  ]
  }
{% endschema %}

